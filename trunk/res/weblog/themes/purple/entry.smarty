<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="zh-CN">
<head>
<meta http-equiv="content-type" content="text/html;charset=utf-8" />
<meta http-equiv="cache-control" content="no-cache" />
<meta name="keywords" content="V2EX, Babel, Livid, PHP, " />
<title>{$entry.bge_title_plain} - {$site_title}</title>
<link href="/favicon.ico" rel="shortcut icon" />
<link href="{$site_weblog_root}/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div id="top">
	<div class="top_right">
	</div>
<div id="top_inside">
<h1 class="title_main"><a href="{$site_weblog_root}" class="white">{$site_title}</a> / <span style="font-weight: 200; font-size: 80%;">{$entry.bge_title_plain}</span></h1>
<h2 class="title_sub">{$site_description}</h2>
</div>
</div>
<div id="container">
<div id="left">
	<div id="left_items">
		<div class="left_title">TAGS</div>
		{foreach from=$tags item=item key=key}
			<div class="item"> <a href="tag-{$item.bet_tag}.html" class="tag">{$item.bet_tag}</a></div>
		{/foreach}
		<div class="sep"></div>
	</div>
</div>
<div id="right">
	<div id="right_items">
		
		<h2 class="dark">&nbsp;BLOGROLL</h2>
		
	</div>
</div>
<div id="main">
	<div id="main_items">
		<div class="top_right"></div>
		<h1 class="title_item">{$entry.bge_title_plain}</h1>
		<div class="sub"><span class="tip"><small>By <a href="http://{$site_babel}/u/{$entry.usr_nick_url}">{$entry.usr_nick_plain}</a> on {$entry.bge_published_plain} - {$entry.bge_comments} comments - {$entry.bge_trackbacks} trackbacks</small></span>
		<div class="toolbar">
			add to del.icio.us{if $item.bge_tags_plain neq ''} - TAGS:{$item.bge_tags_plain}{/if}
		</div>
		</div>
		<div class="object">{$entry.bge_body_plain}</div>
	</div>
</div>
</div>
<div id="bottom_sep">
</div>
{include file='bottom.smarty'}
</body>
</html>